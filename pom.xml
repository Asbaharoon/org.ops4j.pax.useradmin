  <groupId>org.ops4j.pax</groupId>
  <artifactId>useradmin</artifactId>
  <packaging>pom</packaging>
  <name>OPS4J - Pax UserAdmin</name>
  <version>0.0.1-SNAPSHOT</version>
  
  <description>Pax UserAdmin - OPS4J implementation of the OSGi UserAdmin service and more ...</description>
  
  <profiles>
    <profile>
      <id>all</id>
        <activation>
          <activeByDefault>true</activeByDefault>
        </activation>
      <modules>
        <module>pax-useradmin-service</module>
        <module>pax-useradmin-provider-preferences</module>
        <module>pax-useradmin-provider-ldap</module>
        <module>pax-useradmin-command</module>
        <module>pax-useradmin-webservice-api</module>
        <module>pax-useradmin-itest</module>
      </modules>
    </profile>
    <profile>
      <id>no-itest</id>
      <modules>
        <module>pax-useradmin-service</module>
        <module>pax-useradmin-provider-preferences</module>
        <module>pax-useradmin-provider-ldap</module>
        <module>pax-useradmin-command</module>
        <module>pax-useradmin-webservice-api</module>
      </modules>
    </profile>
  </profiles>

